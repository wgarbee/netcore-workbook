@page "{id:int}"
@model BaseProject.Pages.Issues.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Issue.Id" />
            <div class="form-group">
                <label asp-for="Issue.Description" class="control-label"></label>
                <input asp-for="Issue.Description" class="form-control" />
                <span asp-validation-for="Issue.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Status" class="control-label"></label>
                <select asp-for="Issue.Status" class="form-control"></select>
                <span asp-validation-for="Issue.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.AssigneeId" class="control-label"></label>
                <select asp-for="Issue.AssigneeId" class="form-control" asp-items="ViewBag.AssigneeId"></select>
                <span asp-validation-for="Issue.AssigneeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
